# consistent coding styles between different editors and IDEs.

root = true

[*]
end_of_line = crlf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_size = 2
indent_style = space
max_line_length = 120


[*.md]
trim_trailing_whitespace = false


[*.{js,jsx,ts,tsx,json,yml,yaml,css,scss,md}]
quote_type = single
